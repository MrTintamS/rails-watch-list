<div class="container mt-4">
  <h1 class="text-center mb-4">Add a Bookmark to <%= @list.name %></h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4">
        <%= form_with model: [@list, @bookmark], local: true do |form| %>
          <div class="form-group">
            <%= form.label :movie_id, "Select a Movie", class: "form-label" %>
            <%= form.collection_select :movie_id, Movie.all, :id, :title, { prompt: "Choose a movie" }, { class: "form-select" } %>
          </div>
          <div class="form-group mt-3">
            <%= form.label :comment, "Your Comment", class: "form-label" %>
            <%= form.text_area :comment, class: "form-control" %>
          </div>
          <div class="text-center mt-4">
            <%= form.submit "Add Bookmark", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="text-center mt-4">
    <%= link_to "Back to List", list_path(@list), class: "btn btn-secondary" %>
  </div>
</div>
