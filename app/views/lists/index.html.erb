<div class="container mt-4">
  <h1 class="text-center mb-4">All Lists</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <%= link_to "View Details", list_path(list), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-center mt-4">
    <%= link_to "Create a New List", new_list_path, class: "btn btn-success" %>
  </div>
</div>
